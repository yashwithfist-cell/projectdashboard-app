{
  "name": "project-dashboard",
  "version": "0.0.6",
  "private": true,
  "type": "module",
  "main": "main.js",
  "homepage": ".",
  "scripts": {
    "start": "cross-env HOST=0.0.0.0 PORT=3000 react-scripts start",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run start\" \"npm run electron:dev\"",
    "frontend-build": "react-scripts build",
    "electron-build": "npm run frontend-build && electron-builder --win --publish always",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "axios": "^1.11.0",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.23.24",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.555.0",
    "moment": "^2.30.1",
    "react": "^19.1.1",
    "react-calendar": "^6.0.0",
    "react-datepicker": "^8.10.0",
    "react-dom": "^19.1.1",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.2",
    "react-scripts": "^5.0.1",
    "react-select": "^5.10.2",
    "recharts": "^3.1.2",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.18",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.13"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.company.projectdashboard",
    "productName": "ProjectDashboard",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis"
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "publish": {
      "provider": "github",
      "owner": "yashwithfist-cell",
      "repo": "projectdashboard-app",
      "releaseType": "release"
    }
  },
  "author": "Your Name",
  "description": "Project Dashboard Electron app with React frontend"
}